<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="dbDs">
        <properties>
            <!-- main properties -->
            <property name="hibernate.connection.datasource" value="java:/dbDs"/>

            <!-- sql properties -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>

            <!--<property name="hibernate.search.default.directory_provider" value="filesystem"/>-->
            <!--<property name="hibernate.search.default.indexBase" value="/var/lucene/indexes"/>-->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- java melody send sql statistics -->
            <property name="hibernate.jdbc.factory_class" value="net.bull.javamelody.HibernateBatcherFactory"/>

            <!-- audit configuration -->
            <property name="org.hibernate.envers.default_schema" value="audit"/>
            <property name="org.hibernate.envers.store_data_at_delete" value="true" />

        </properties>
    </persistence-unit>
</persistence>